extends layout

block navbar
  title= HomeStayLogIn

  header
    nav.navbar.navbar-expand-md.navbar-dark.fixed-top.bg-dark
      a.navbar-brand(href='/userpage') HomeStay
      button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarCollapse' aria-controls='navbarCollapse' aria-expanded='false' aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarCollapse.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item.signUpToggle
            a.nav-link(href='/listplace') List a Place
          li.nav-item
            a.nav-link.signInToggle(href='/myaccount') My Account
          li.nav-item
            a.nav-link.aboutToggle(href='/logout') Log Out
        form.form-inline.mt-2.mt-md-0
          .input-group
            input.form-control.searchField(id='searchPlace' name='searchPlace' type='text' placeholder='City, Postal code' aria-label='Country, City, Postal code' aria-describedby='Search Place')
          button.input-group-text.text-center.searchButton(type='submit')
            i.material-icons.searchIcon search
  body
    block content